{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "strict": false,
        "ignoreDeprecations": "5.0",
        "typeRoots": ["./node_modules/@types", "./types"],
        "types": ["node", "vitest/globals"],
        "noErrorTruncation": true,
        "noEmit": true,
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "**/__tests__/**/*.ts",
        "**/__tests__/**/*.tsx",
        "**/*.ts",
        "**/*.tsx",
        "vitest.config.ts",
        "types/**/*.d.ts"
    ],
    "exclude": ["node_modules", ".next"]
}
