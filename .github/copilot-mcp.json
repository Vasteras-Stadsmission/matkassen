{
    "mcpServers": {
        "playwright": {
            "command": "pnpm",
            "args": [
                "exec",
                "mcp-server-playwright",
                "--storage-state=.auth/user.json",
                "--host",
                "127.0.0.1"
            ],
            "env": {
                "PLAYWRIGHT_BASE_URL": "http://localhost:3000",
                "NODE_ENV": "development"
            }
        }
    }
}
