{
    "name": "matkassen",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "next build",
        "dev": "docker compose -f docker-compose.dev.yml up db -d && ./scripts/wait-for-db.sh && pnpm run db:migrate && next dev --turbopack",
        "dev:build": "docker compose -f docker-compose.dev.yml build",
        "dev:docker": "next dev --turbopack --hostname 0.0.0.0",
        "db:generate": "pnpm drizzle-kit generate",
        "db:migrate": "pnpm drizzle-kit migrate",
        "format-check": "prettier --check .",
        "format": "prettier --write .",
        "lint": "next lint",
        "preview:production": "docker compose -f docker-compose.local.yml up --build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "start": "next start",
        "typecheck": "tsc --noEmit",
        "validate": "pnpm run lint && pnpm run typecheck && pnpm run format-check"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@mantine/code-highlight": "^8.1.1",
        "@mantine/core": "^8.1.1",
        "@mantine/dates": "^8.1.1",
        "@mantine/form": "^8.1.1",
        "@mantine/hooks": "^8.1.1",
        "@mantine/notifications": "^8.1.1",
        "@octokit/auth-app": "^8.0.1",
        "@tabler/icons-react": "^3.34.0",
        "critters": "^0.0.23",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.42.0",
        "fast-deep-equal": "^3.1.3",
        "isomorphic-dompurify": "^2.25.0",
        "mantine-datatable": "^7.17.1",
        "nanoid": "^5.1.5",
        "next": "15.4.7",
        "next-auth": "5.0.0-beta.29",
        "next-intl": "^4.3.1",
        "postgres": "^3.4.7",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^20.19.1",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@typescript-eslint/eslint-plugin": "^8.35.0",
        "@typescript-eslint/parser": "^8.35.0",
        "@vitejs/plugin-react": "^4.6.0",
        "@vitest/ui": "^3.2.4",
        "drizzle-kit": "^0.30.6",
        "eslint": "^9.29.0",
        "eslint-config-next": "15.1.5",
        "happy-dom": "^17.6.3",
        "jsdom": "^26.1.0",
        "postcss": "^8.5.6",
        "postcss-preset-mantine": "^1.17.0",
        "postcss-simple-vars": "^7.0.1",
        "prettier": "3.4.2",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
