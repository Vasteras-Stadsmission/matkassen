{
    "name": "matkassen",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "docker compose -f docker-compose.dev.yml up db -d && ./scripts/wait-for-db.sh && bun run db:migrate && next dev --turbopack",
        "dev:containers-only": "docker compose -f docker-compose.dev.yml up -d && docker compose exec -T web bun run db:migrate",
        "dev:build": "COMPOSE_BAKE=true docker compose -f docker-compose.dev.yml build",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "format-check": "prettier --check .",
        "format": "prettier --write .",
        "db:generate": "bun drizzle-kit generate",
        "db:migrate": "bun drizzle-kit migrate",
        "test": "bun test --preload ./__tests__/setup.ts",
        "typecheck": "tsc --noEmit",
        "typecheck:test": "tsc --noEmit --skipLibCheck --project tsconfig.test.json",
        "validate": "bun run lint && bun run typecheck && bun run typecheck:test && bun run format-check"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@mantine/code-highlight": "^8.0.2",
        "@mantine/core": "^8.0.2",
        "@mantine/dates": "^8.0.2",
        "@mantine/form": "^8.0.2",
        "@mantine/hooks": "^8.0.2",
        "@mantine/notifications": "^8.0.2",
        "@tabler/icons-react": "^3.31.0",
        "@types/pg": "^8.11.13",
        "critters": "^0.0.23",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "dayjs": "^1.11.13",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.42.0",
        "fast-deep-equal": "^3.1.3",
        "isomorphic-dompurify": "^2.24.0",
        "mantine-datatable": "^7.17.1",
        "next": "15.2.4",
        "next-auth": "^5.0.0-beta.25",
        "next-intl": "^4.1.0",
        "pg": "^8.14.1",
        "postgres": "^3.4.5",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^20.17.30",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "bun-types": "^1.2.12",
        "drizzle-kit": "^0.30.6",
        "eslint": "^9.25.0",
        "eslint-config-next": "15.1.5",
        "eslint-plugin-jest": "^28.11.0",
        "happy-dom": "^17.4.4",
        "postcss": "^8.5.3",
        "postcss-preset-mantine": "^1.17.0",
        "postcss-simple-vars": "^7.0.1",
        "prettier": "3.4.2",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.8.3"
    }
}
